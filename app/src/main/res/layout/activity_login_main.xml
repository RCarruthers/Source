<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryBlue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewBackground"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bg_main_resized"
            android:layout_alignParentTop="true"
            android:alpha=".08"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/source_logo"
            android:layout_alignParentTop="true" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_mail"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/emailEditText"
                    android:paddingBottom="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    app:srcCompat="@drawable/icon_mail_white" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:hint="Email Address"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textColorHint="#60ffffff" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_password"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/passwordEditText"
                    android:paddingBottom="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    app:srcCompat="@drawable/icon_lock_white" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:hint="Password"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textColorHint="#60ffffff" />


            </RelativeLayout>

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="Sign in" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="Register" />

            <TextView
                android:id="@+id/forgottenPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgotten Password? "
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textColorHint="#60ffffff" />

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>



